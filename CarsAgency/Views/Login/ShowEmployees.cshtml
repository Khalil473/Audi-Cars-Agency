@model List<Employee>

    <style>
#Parts {
  font-family: Arial, Helvetica, sans-serif;
  border-collapse: collapse;
  width: 100%;
}

#Parts td, #Parts th {
  border: 1px solid #ddd;
  padding: 8px;
}

#Parts tr:nth-child(even){background-color: #f2f2f2;}

#Parts tr:hover {background-color: #ddd;}

#Parts th {
  padding-top: 12px;
  padding-bottom: 12px;
  text-align: left;
  background-color: #04AA6D;
  color: white;
}
</style>


<table id="Parts">
    <tr><th>Employee Name</th><th>Adress</th><th>Gender</th><th>Salary</th><th>Email</th><th>Edit Employee Info</th></tr>
@foreach(Employee employee in Model){
   <tr>
       <td>@employee.Name</td>
       <td>@employee.Adress</td>
       <td>@employee.gender</td>
       <td>@employee.Salary</td>
       <td>@employee.Email</td>
       <td><a asp-action="EditEmployee" asp-controller="Login" asp-route-Id="@employee.EmployeeId">Edit</a></td>
   </tr>
}
</table>
 <td style="text-align: center;"><a class="btn btn-primary" style="height: 50px; line-height: 50px;" asp-action="AddEmployee" asp-controller="Login">Add Employee</a></td>
